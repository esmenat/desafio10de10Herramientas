@model IEnumerable<Logs.API.Models.RegistroLog>

@{
    var currentSort = ViewData["OrderBy"] as string;
    var isDesc = ViewData["Desc"] != null && (bool)ViewData["Desc"];
    var searchTerm = ViewData["SearchTerm"] as string;
}

<div class="container mt-4">
    <h2>Registros de Logs</h2>

    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" id="searchTerm" name="searchTerm"
                   value="@searchTerm" class="form-control" placeholder="Buscar por mensaje o placa..." />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </div>
    </form>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    <a href="?orderBy=Codigo&desc=@(currentSort == "Codigo" && !isDesc)">Código</a>
                </th>
                <th>
                    <a href="?orderBy=FechaHora&desc=@(currentSort == "FechaHora" && !isDesc)">Fecha Hora</a>
                </th>
                <th>Mensaje</th>
                <th>Tipo Log</th>
                <th>Placa Camión</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaHora)</td>
                    <td>@Html.DisplayFor(modelItem => item.Mensaje)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoLogCodigo)</td>
                    <td>@Html.DisplayFor(modelItem => item.PlacaCamion)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
