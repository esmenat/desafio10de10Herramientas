@model Logs.API.Models.TipoLog

<div>
    <h4>TipoLog</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreTipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreTipo)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Codigo }) |
    <a asp-action="Index">Back to List</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Registro</th>
            <th>Fecha y Hora</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var registro in Model.Registros)
        {
            <tr>
                <td>
                    <a asp-action="Index" asp-controller="RegistrosLogs" asp-route-id="@registro.Codigo">@registro.Mensaje</a>
                </td>
                <td>
                    <a asp-action="Index" asp-controller="RegistrosLogs" asp-route-id="@registro.Codigo">@registro.FechaHora</a>
                </td>
            </tr>
        }
    </tbody>
</table>